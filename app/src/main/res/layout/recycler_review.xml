<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="16dp"
    >

    <ImageView
        android:id="@+id/recycler_review_profimg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        />
    <RatingBar
        android:id="@+id/recycler_review_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:isIndicator="true"
        android:numStars="5"
        app:layout_constraintTop_toTopOf="@+id/recycler_review_profimg"
        app:layout_constraintLeft_toRightOf="@+id/recycler_review_profimg"
        android:layout_marginLeft="8dp"
        />
    <TextView
        android:id="@+id/recycler_review_ratecnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/recycler_review_ratingbar"
        app:layout_constraintBottom_toBottomOf="@id/recycler_review_ratingbar"
        app:layout_constraintLeft_toRightOf="@+id/recycler_review_ratingbar"
        android:layout_marginLeft="2dp"
        android:text="4"
        android:textSize="14sp"
        android:textColor="#9D9D9D"
        />
    <TextView
        android:id="@+id/recycler_review_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="방탈출 만렙"
        app:layout_constraintTop_toBottomOf="@+id/recycler_review_ratingbar"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_review_ratingbar"
        android:layout_marginTop="4dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-MM-DD"
            app:layout_constraintTop_toBottomOf="@id/recycler_review_username"
            app:layout_constraintLeft_toLeftOf="@+id/recycler_review_ratingbar"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="#9D9D9D"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_review_profimg"
        app:layout_constraintTop_toBottomOf="@+id/recycler_review_profimg"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="left"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인테리어"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근에 만들어진 테마라 그런지 장치들이 잘 관리되어 있었고 전체적으로도 시설이 깨끗한 편이에요!"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천도"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀의 화원 테마는 처음이었는데 만족합니다! 공포도도 적당하고 스릴있었어용"
            android:textSize="14sp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>